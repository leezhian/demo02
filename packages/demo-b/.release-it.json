{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "${branchName}@${version}",
    "requireCleanWorkingDir": false,
    "push": true
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "access": "public"
    }
  },
  "plugins": {
    "release-it-pnpm": {
      "disableRelease": true
    }
  },
  "hooks": {
    "before:init": ["pnpm build"],
    "after:release": "echo 'âœ¨ Successfully released ${name} v${version} to npm.'"
  }
}
