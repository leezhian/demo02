{
  "git": {
    "commitMessage": "chore: release ${npm.name}@${version}",
    "tag": false,
    "requireCleanWorkingDir": false,
    "commitsPath": ".",
    "requireCommits": true,
    "requireCommitsFail": false,
    "push": false
  },
  "npm": {
    "publish": false,
    "publishConfig": {
      "access": "public"
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": false,
      "gitRawCommitsOpts": {
        "path": "."
      }
    }
  },
  "hooks": {
    "after:bump": ["pnpm build"],
    "after:release": ["echo 'âœ¨ Successfully released ${name} v${version} to npm.'"]
  }
}
