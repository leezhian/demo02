{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "push": true
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "access": "public"
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": false,
      "parserOpts": {
        "headerPattern": "^(\\w*)(?:\\(([\\w\\$\\.\\-\\*\\s]*)\\))?\\:\\s(.*)$",
        "headerCorrespondence": [
          "type",
          "scope",
          "subject"
        ]
      }
    }
  },
  "hooks": {
    "before:init": ["pnpm build"],
    "after:release": "echo 'âœ¨ Successfully released ${name} v${version} to npm.'"
  }
}
