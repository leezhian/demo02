{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "${npm.name}-v${version}",
    "requireCleanWorkingDir": false,
    "commitsPath": ".",
    "requireCommits": true,
    "requireCommitsFail": false,
    "push": true
  },
  "npm": {
    "publish": false,
    "publishConfig": {
      "access": "public"
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": false,
      "gitRawCommitsOpts": {
        "path": "."
      }
    }
  },
  "hooks": {
    "after:bump": ["pnpm build"],
    "after:release": ["pnpm publish --no-git-checks", "echo 'âœ¨ Successfully released ${name} v${version} to npm.'"]
  }
}
